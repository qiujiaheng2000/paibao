<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/top_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="您发布宝贝帖的目的是为了？？"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/chushou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/custom_radio_btn"
                    android:padding="15dp"
                    android:text="出售"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e3e3e3" >
                </LinearLayout>

                <RadioButton
                    android:id="@+id/qiuzhangyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:drawableRight="@drawable/custom_radio_btn"
                    android:padding="15dp"
                    android:text="求掌眼"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e3e3e3" >
                </LinearLayout>

                <RadioButton
                    android:id="@+id/bawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/custom_radio_btn"
                    android:padding="15dp"
                    android:text="把玩"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e3e3e3" >
                </LinearLayout>

                <RadioButton
                    android:id="@+id/fenxiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/custom_radio_btn"
                    android:padding="15dp"
                    android:text="分享"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp" />
            </RadioGroup>
			
            <EditText
                android:id="@+id/input_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="15dp"
                android:hint="请输入您的qq"
                android:inputType="textAutoComplete"
                android:textSize="14sp" 
                android:visibility="visible"/>

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:hint="请输入您的电话"
                android:inputType="textAutoComplete"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:src="@drawable/location_lv_" />

                <TextView
                    android:id="@+id/location_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="自动获取位置信息"
                    android:layout_weight="4"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp" />
                <CheckBox 
                    android:id="@+id/on_off"
                    android:layout_margin="10dp"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/check_state"
                    android:button="@null"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:hint="实体店详细地址"
                android:singleLine="true"
                android:textColor="#2b2b2b"
                android:textSize="14sp" />

            <Button
                android:id="@+id/publicplays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/top_title_bar"
                android:text="发布"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/jhqiu/Desktop/paibao/paibao/Paibao/PlayingTreasure/res/layout/activity_publicplays_sort.xml -->