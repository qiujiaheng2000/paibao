<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/water_fall_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/water_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/empty_photo"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/water_fall_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/a" />
    </RelativeLayout>

    <TextView
        android:id="@+id/water_fall_play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_img_layout"
        android:padding="4dp"
        android:singleLine="false"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />
	<ImageView
            android:id="@+id/auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/auth"
            android:layout_alignParentRight="true"
           	android:layout_below="@id/water_fall_play_name"
           	android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/water_fall_des_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/auth"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/water_fall_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_like"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/water_fall_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_comment"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/water_fall_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_distance"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />
       
    </LinearLayout>
 	
</RelativeLayout><!-- From: file:/Users/jhqiu/Desktop/paibao/paibao/Paibao/PlayingTreasure/res/layout/item_water_fall.xml -->