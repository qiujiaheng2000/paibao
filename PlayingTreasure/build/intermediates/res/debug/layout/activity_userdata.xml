<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/top_title_bar" />

    <RelativeLayout
        android:id="@+id/changeicongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:src="@drawable/me_head_bg" />

        <com.play.treasure.widget.CircularImage
            android:id="@+id/cover_user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/changeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_centerHorizontal="true"
            android:layout_below="@id/icon"
            android:layout_marginTop="10dp"
            android:text="更换头像"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:hint="昵称/店铺名"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="top"
        android:hint="如果为实体商家请输入详细地址"
        android:inputType="textMultiLine"
        android:lines="4"
        android:minLines="4"
        android:textSize="14sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textSize="18sp" />

</LinearLayout><!-- From: file:/Users/jhqiu/Desktop/paibao/paibao/Paibao/PlayingTreasure/res/layout/activity_userdata.xml -->