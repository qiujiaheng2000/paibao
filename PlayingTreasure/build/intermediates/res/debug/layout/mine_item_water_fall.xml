<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/water_fall_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#FAFAFA"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/water_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/empty_photo"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/water_fall_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/a" />
    </RelativeLayout>

    <TextView
        android:id="@+id/water_fall_play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_img_layout"
        android:padding="4dp"
        android:singleLine="false"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/water_fall_des_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_fall_play_name"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/water_fall_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_like"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/water_fall_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_comment"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/water_fall_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_distance"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/water_fall_handle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_fall_des_layout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/water_fall_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/water_fall__delete"
            android:background="#f50908"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/water_fall__delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:background="#f50908"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/jhqiu/Desktop/paibao/paibao/Paibao/PlayingTreasure/res/layout/mine_item_water_fall.xml -->