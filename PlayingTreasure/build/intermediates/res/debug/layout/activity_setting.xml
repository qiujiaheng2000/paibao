<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:orientation="vertical" >

    <include layout="@layout/top_title_bar" />

    <TextView
        android:id="@+id/setting_user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="个人资料设置"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="修改账户密码"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_feed_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="意见反馈"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="关于拍宝"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="业务合作及联系"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_item_text"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="检查更新"
        android:textColor="#2b2b2b"
        android:textSize="16sp" />

    <Button
        android:id="@+id/setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:text="退出登录"
        android:textColor="#2b2b2b"
        android:textSize="18sp" />

</LinearLayout><!-- From: file:/Users/jhqiu/Desktop/paibao/paibao/Paibao/PlayingTreasure/res/layout/activity_setting.xml -->