<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/hint_system"
        android:textColor="@color/link_blue"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/link_blue" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical" >]

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="86dp"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@drawable/dialog_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="48dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_diver"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#ffbababa" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

