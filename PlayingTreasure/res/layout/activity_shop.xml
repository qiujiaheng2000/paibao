<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e1e1e1"
              android:orientation="vertical">

    <com.handmark.pulltorefresh.library.PullToRefreshStaggeredGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:column_count="@integer/grid_column_count"
        app:item_margin="8dp"/>

    <RelativeLayout
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:background="#66000000">

        <ImageView
            android:id="@+id/title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:onClick="back"
            android:padding="10dp"
            android:src="@drawable/back480_03"/>

        <TextView
            android:id="@+id/title_bar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商家店名"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/pub_textsize_twenty"/>

        <ImageView
            android:id="@+id/title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:onClick="share"
            android:padding="10dp"
            android:src="@drawable/share"/>
    </RelativeLayout>

</RelativeLayout>
